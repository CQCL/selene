{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "bootstrap-sha": "45211c055979361701b2246e0a2c59b87d846bb2",
    "separate-pull-requests": true,
    "pull-request-title-pattern": "chore: release${component} ${version}",
    "bump-minor-pre-major": true,
    "bump-patch-for-minor-pre-major": true,
    "include-component-in-tag": true,
    "packages": {
        "selene-core": {
            "release-type": "python",
            "package-name": "selene-core",
            "component": "selene-core",
            "draft": false,
            "prerelease": false,
            "draft-pull-request": true,
            "extra-files": [
                {
                    "type": "toml",
                    "path": "Cargo.toml",
                    "jsonpath": "$.package.version"
                },
                {
                    "type": "toml",
                    "path": "/Cargo.lock",
                    "jsonpath": "$.package[?(@.name.value=='selene-core')].version"
                },
                {
                    "type": "toml",
                    "path": "/uv.lock",
                    "jsonpath": "$.package[?(@.name.value=='selene-core')].version"
                },
                {
                    "type": "toml",
                    "path": "examples/error_model/Cargo.lock",
                    "jsonpath": "$.package[?(@.name.value=='selene-core')].version"
                },
                {
                    "type": "toml",
                    "path": "examples/simulator/Cargo.lock",
                    "jsonpath": "$.package[?(@.name.value=='selene-core')].version"
                },
                {
                    "type": "toml",
                    "path": "examples/runtime/Cargo.lock",
                    "jsonpath": "$.package[?(@.name.value=='selene-core')].version"
                }
            ]
        },
        "selene-compilers/hugr_qis": {
            "release-type": "python",
            "package-name": "selene-hugr-qis-compiler",
            "component": "selene-hugr-qis-compiler",
            "draft": false,
            "prerelease": false,
            "draft-pull-request": true,
            "extra-files": [
                {
                    "type": "toml",
                    "path": "Cargo.toml",
                    "jsonpath": "$.package.version"
                },
                {
                    "type": "toml",
                    "path": "Cargo.lock",
                    "jsonpath": "$.package[?(@.name.value=='selene-hugr-qis-compiler')].version"
                }
            ]
        },
        ".": {
            "release-type": "python",
            "package-name": "selene-sim",
            "component": "selene-sim",
            "draft": false,
            "prerelease": false,
            "draft-pull-request": true,
            "extra-files": [
                {
                    "type": "toml",
                    "path": "uv.lock",
                    "jsonpath": "$.package[?(@.name.value=='selene-sim')].version"
                },
                {
                    "type": "toml",
                    "path": "Cargo.toml",
                    "jsonpath": "$.workspace.package.version"
                },
                {
                    "type": "toml",
                    "path": "Cargo.lock",
                    "jsonpath": "$.package[?((@.name.value.match(/^selene-/)) && (@.name.value != 'selene-core'))].version"
                }
            ]
        }
    }
}
